{
    "name": "interactive-itinerary",
    "version": "1.0.0",
    "description": "A mobile-first standalone HTML interactive trip itinerary with day tabs, route maps, activity checklists, and reusable file loading",
    "private": true,
    "type": "module",
    "scripts": {
        "test:unit": "vitest run --config vitest.config.js tests/unit/",
        "test:integration": "vitest run --config vitest.config.js tests/integration/",
        "test:e2e": "npx playwright test --config playwright.config.cjs",
        "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
        "validate:itinerary": "node scripts/validate-itinerary.cjs",
        "dev": "node scripts/dev-server.mjs",
        "dev:worker": "wrangler dev --remote --config wrangler.dev.toml",
        "dev:all": "concurrently -k -n dev,worker -c cyan,magenta \"npm:dev\" \"npm:dev:worker\"",
        "deploy:worker": "bash ./cloudflare/deploy-worker.sh",
        "deploy:images": "npx wrangler pages deploy private/images --project-name=itinerary-images --branch=main --commit-dirty=true",
        "rewrite:image-urls": "node scripts/rewrite-image-urls.mjs",
        "setup:hooks": "bash ./scripts/install-git-hooks.sh"
    },
    "devDependencies": {
        "@playwright/test": "^1.50.0",
        "ajv": "^8.17.0",
        "ajv-formats": "^3.0.0",
        "concurrently": "^9.2.1",
        "jsdom": "^25.0.0",
        "serve": "^14.2.5",
        "vitest": "^3.0.0",
        "wrangler": "^4.69.0"
    },
    "dependencies": {
        "dotenv": "^17.3.1"
    }
}
