{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://interactive-itinerary.local/schemas/itinerary-file.schema.json",
    "title": "Interactive Itinerary File",
    "type": "object",
    "additionalProperties": false,
    "required": ["schemaVersion", "tripId", "title", "days"],
    "properties": {
        "schemaVersion": {
            "type": "string",
            "const": "1.0"
        },
        "tripId": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string",
            "minLength": 1
        },
        "dateRange": {
            "type": "object",
            "additionalProperties": false,
            "required": ["start", "end"],
            "properties": {
                "start": {
                    "type": "string",
                    "format": "date"
                },
                "end": {
                    "type": "string",
                    "format": "date"
                }
            }
        },
        "days": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/tripDay"
            }
        }
    },
    "$defs": {
        "tripDay": {
            "type": "object",
            "additionalProperties": false,
            "required": ["dayId", "dayNumber", "label", "activities"],
            "properties": {
                "dayId": {
                    "type": "string",
                    "minLength": 1
                },
                "dayNumber": {
                    "type": "integer",
                    "minimum": 1
                },
                "label": {
                    "type": "string",
                    "minLength": 1
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "activities": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/activity"
                    }
                }
            }
        },
        "activity": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "activityId",
                "order",
                "name",
                "description",
                "image",
                "location",
                "price",
                "tips",
                "photoSpotTips",
                "ratingSummary",
                "reviewLinks",
                "websiteUrl"
            ],
            "properties": {
                "activityId": {
                    "type": "string",
                    "minLength": 1
                },
                "order": {
                    "type": "integer",
                    "minimum": 1
                },
                "time": {
                    "type": "string",
                    "minLength": 1
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "image": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["url", "alt"],
                    "properties": {
                        "url": {
                            "type": "string",
                            "format": "uri"
                        },
                        "alt": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                },
                "location": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["mapsUrl"],
                    "properties": {
                        "lat": {
                            "type": "number",
                            "minimum": -90,
                            "maximum": 90
                        },
                        "lng": {
                            "type": "number",
                            "minimum": -180,
                            "maximum": 180
                        },
                        "mapsUrl": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                "price": {
                    "type": ["string", "null"]
                },
                "tips": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "photoSpotTips": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "photoExamples": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/photoExample"
                    }
                },
                "ratingSummary": {
                    "type": ["string", "null"]
                },
                "reviewLinks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/reviewReference"
                    }
                },
                "websiteUrl": {
                    "type": ["string", "null"],
                    "format": "uri"
                }
            }
        },
        "reviewReference": {
            "type": "object",
            "additionalProperties": false,
            "required": ["sourceName", "url"],
            "properties": {
                "sourceName": {
                    "type": "string",
                    "minLength": 1
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "photoExample": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url", "alt"],
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "alt": {
                    "type": "string",
                    "minLength": 1
                },
                "credit": {
                    "type": "string",
                    "minLength": 1
                },
                "pageUrl": {
                    "type": "string",
                    "format": "uri"
                }
            }
        }
    }
}
